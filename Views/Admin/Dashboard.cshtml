@model HostelManageentSystem.Models.AdminDashboardViewModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<style>
    body {
        background: linear-gradient(135deg, #006a4e, #ff0000);
        background-size: 400% 400%;
        animation: gradientMove 15s ease infinite;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    @@keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .sidebar {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        height: 100vh;
        padding-top: 20px;
    }

    .sidebar .nav-link {
        color: #006a4e;
        font-weight: 600;
        transition: background 0.3s, color 0.3s;
    }

    .sidebar .nav-link:hover {
        background: #006a4e;
        color: white;
        border-radius: 10px;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        background-color: #006a4e;
        color: white;
        font-weight: bold;
    }

    .btn-primary, .btn-success, .btn-info {
        border-radius: 30px;
        font-weight: bold;
        padding: 10px 20px;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background-color: #004c36;
    }
    .btn-success:hover {
        background-color: #0a733c;
    }
    .btn-info:hover {
        background-color: #127ba3;
    }

    .activity-item {
        padding: 10px;
        border-bottom: 1px solid #eee;
    }

    .activity-item:last-child {
        border-bottom: none;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Users">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Hostels">
                            <i class="fas fa-building"></i> Hostels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Bookings">
                            <i class="fas fa-calendar-check"></i> Bookings
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-white">Admin Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2">
                        <a asp-action="CreateHostel" class="btn btn-sm btn-outline-light">Add New Hostel</a>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Total Users</h5>
                            <p class="card-text display-4">@Model.TotalUsers</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Active Hostels</h5>
                            <p class="card-text display-4">@Model.TotalHostels</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Total Bookings</h5>
                            <p class="card-text display-4">@Model.TotalBookings</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Recent Activities
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                @if (Model.RecentBookings != null && Model.RecentBookings.Any())
                                {
                                    @foreach (var booking in Model.RecentBookings)
                                    {
                                        <li class="activity-item">
                                            <strong>@(booking.User?.UserName ?? "Unknown User")</strong> booked 
                                            <strong>@(booking.Hostel?.Name ?? "Unknown Hostel")</strong> on 
                                            @booking.CheckInDate.ToString("MMM dd, yyyy")
                                            <span class="badge bg-@(booking.Status == "Confirmed" ? "success" : "warning")">
                                                @booking.Status
                                            </span>
                                        </li>
                                    }
                                }
                                else
                                {
                                    <li class="activity-item">No recent activities</li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            Quick Actions
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-2">
                                <a asp-action="CreateHostel" class="btn btn-primary mb-2">Add New Hostel</a>
                                <a asp-action="Users" class="btn btn-success mb-2">Manage Users</a>
                                <a asp-action="Bookings" class="btn btn-info">View Bookings</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
}
