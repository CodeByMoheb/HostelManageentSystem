@model IEnumerable<HostelManageentSystem.Models.Hostel>
@{
    ViewData["Title"] = "Manage Hostels";
}

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Dashboard">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Users">
                            <i class="fas fa-users"></i> Users
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-action="Hostels">
                            <i class="fas fa-building"></i> Hostels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Bookings">
                            <i class="fas fa-calendar-check"></i> Bookings
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Manage Hostels</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a asp-action="CreateHostel" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Hostel
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Address</th>
                            <th>Phone</th>
                            <th>Rooms</th>
                            <th>Price</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hostel in Model)
                        {
                            <tr>
                                <td>@hostel.Name</td>
                                <td>@hostel.Address</td>
                                <td>@hostel.PhoneNumber</td>
                                <td>@hostel.AvailableRooms / @hostel.TotalRooms</td>
                                <td>@hostel.PricePerRoom.ToString("C")</td>
                                <td>
                                    <span class="badge bg-@(hostel.IsActive ? "success" : "danger")">
                                        @(hostel.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <a asp-action="EditHostel" asp-route-id="@hostel.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-edit"></i> Edit
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 