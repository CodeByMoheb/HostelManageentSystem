@model HostelManageentSystem.Models.Meal
@{
    ViewData["Title"] = "Add New Meal";
    var hostelId = ViewBag.HostelId;
    var hostelName = ViewBag.HostelName;
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Manager")">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Hostels", "Manager")">
                            <i class="fas fa-building"></i> My Hostels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Bookings", "Manager")">
                            <i class="fas fa-calendar-check"></i> Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Meals", "Manager")">
                            <i class="fas fa-utensils"></i> Meal Management
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Add New Meal - @hostelName</h1>
            </div>

            <div class="row">
                <div class="col-md-8">
                    <form asp-action="CreateMeal">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="HostelId" value="@hostelId" />
                        
                        <div class="mb-3">
                            <label asp-for="MealDate" class="form-label"></label>
                            <input asp-for="MealDate" class="form-control" type="date" />
                            <span asp-validation-for="MealDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="MealType" class="form-label"></label>
                            <select asp-for="MealType" class="form-select">
                                <option value="Breakfast">Breakfast</option>
                                <option value="Lunch">Lunch</option>
                                <option value="Dinner">Dinner</option>
                            </select>
                            <span asp-validation-for="MealType" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Menu" class="form-label"></label>
                            <textarea asp-for="Menu" class="form-control" rows="4"></textarea>
                            <span asp-validation-for="Menu" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Price" class="form-label"></label>
                            <input asp-for="Price" class="form-control" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsAvailable" class="form-check-input" />
                            <label asp-for="IsAvailable" class="form-check-label"></label>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Meal
                            </button>
                            <a href="@Url.Action("Meals", "Manager", new { hostelId = hostelId })" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} 