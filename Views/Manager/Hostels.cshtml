@model IEnumerable<HostelManageentSystem.Models.Hostel>
@{
    ViewData["Title"] = "My Hostels";
}

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Dashboard", "Manager")">
                            <i class="fas fa-tachometer-alt"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Hostels", "Manager")">
                            <i class="fas fa-building"></i> My Hostels
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Bookings", "Manager")">
                            <i class="fas fa-calendar-check"></i> Bookings
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Meals", "Manager")">
                            <i class="fas fa-utensils"></i> Meal Management
                        </a>
                    </li>
                </ul>
            </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">My Hostels</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <a href="@Url.Action("CreateHostel", "Manager")" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New Hostel
                    </a>
                </div>
            </div>

            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Location</th>
                            <th>Total Rooms</th>
                            <th>Available Rooms</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var hostel in Model)
                        {
                            <tr>
                                <td>@hostel.Name</td>
                                <td>@hostel.City, @hostel.Area</td>
                                <td>@hostel.TotalRooms</td>
                                <td>@hostel.AvailableRooms</td>
                                <td>
                                    <span class="badge @(hostel.IsActive ? "bg-success" : "bg-danger")">
                                        @(hostel.IsActive ? "Active" : "Inactive")
                                    </span>
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("EditHostel", "Manager", new { id = hostel.Id })" 
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-edit"></i> Edit
                                        </a>
                                        <a href="@Url.Action("Rooms", "Manager", new { hostelId = hostel.Id })" 
                                           class="btn btn-sm btn-outline-info">
                                            <i class="fas fa-door-open"></i> Rooms
                                        </a>
                                        <a href="@Url.Action("Meals", "Manager", new { hostelId = hostel.Id })" 
                                           class="btn btn-sm btn-outline-success">
                                            <i class="fas fa-utensils"></i> Meals
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script>
        // Add any necessary JavaScript here
    </script>
} 