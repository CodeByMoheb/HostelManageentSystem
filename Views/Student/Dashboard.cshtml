@{
    ViewData["Title"] = "Student Dashboard";
}

<style>
    body {
        background: linear-gradient(135deg, #006a4e, #ff0000);
        background-size: 400% 400%;
        animation: gradientMove 15s ease infinite;
        min-height: 100vh;
        font-family: 'Poppins', sans-serif;
    }

    @@keyframes gradientMove {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }

    .sidebar {
        background: rgba(255, 255, 255, 0.9);
        backdrop-filter: blur(10px);
        height: 100vh;
        padding-top: 20px;
    }

    .sidebar .nav-link {
        color: #006a4e;
        font-weight: 600;
        transition: background 0.3s, color 0.3s;
        border-radius: 10px;
        margin: 5px 0;
        padding: 12px 15px;
    }

    .sidebar .nav-link:hover {
        background: #006a4e;
        color: white;
        transform: translateX(5px);
    }

    .sidebar .nav-link.active {
        background: #006a4e;
        color: white;
    }

    .card {
        border-radius: 20px;
        box-shadow: 0px 8px 20px rgba(0, 0, 0, 0.2);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        border: none;
        overflow: hidden;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0px 12px 30px rgba(0, 0, 0, 0.3);
    }

    .card-header {
        background-color: #006a4e;
        color: white;
        font-weight: bold;
        border-bottom: none;
        padding: 20px;
    }

    .card-body {
        padding: 25px;
    }

    .btn-primary, .btn-success, .btn-info {
        border-radius: 30px;
        font-weight: bold;
        padding: 12px 25px;
        transition: all 0.3s ease;
        border: none;
        text-transform: uppercase;
        letter-spacing: 1px;
    }

    .btn-primary {
        background: #006a4e;
    }

    .btn-success {
        background: #ff0000;
    }

    .btn-info {
        background: #ffb400;
    }

    .btn-primary:hover {
        background: #004c36;
        transform: translateY(-2px);
    }

    .btn-success:hover {
        background: #cc0000;
        transform: translateY(-2px);
    }

    .btn-info:hover {
        background: #e6a200;
        transform: translateY(-2px);
    }

    .list-group-item {
        border: none;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 10px !important;
        background: #f8f9fa;
        transition: all 0.3s ease;
    }

    .list-group-item:hover {
        background: #e9ecef;
        transform: translateX(5px);
    }

    .display-4 {
        font-weight: 700;
        margin-bottom: 0;
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 15px;
        color: rgba(255, 255, 255, 0.9);
    }

    .text-white {
        color: white !important;
    }
</style>

<div class="container-fluid">
    <div class="row">
        <nav class="col-md-2 d-none d-md-block sidebar">
            <div class="sidebar-sticky">
                <div class="text-center mb-4 mt-3">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/f/f9/Flag_of_Bangladesh.svg/1200px-Flag_of_Bangladesh.svg.png" 
                         style="width: 50px; height: 30px; object-fit: cover; border-radius: 4px;" alt="Bangladesh Flag">
                </div>
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link active" href="#">
                            <i class="fas fa-tachometer-alt me-2"></i> Dashboard
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-bed me-2"></i> My Room
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-file-invoice-dollar me-2"></i> Payments
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">
                            <i class="fas fa-cog me-2"></i> Settings
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main role="main" class="col-md-9 ml-sm-auto col-lg-10 px-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2 text-white">Student Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group mr-2">
                        <button type="button" class="btn btn-sm btn-outline-light">
                            <i class="fas fa-print me-2"></i>Print
                        </button>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-primary">
                        <div class="card-body">
                            <h5 class="card-title">Room Number</h5>
                            <p class="card-text display-4">101</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-success">
                        <div class="card-body">
                            <h5 class="card-title">Next Payment Due</h5>
                            <p class="card-text display-4">15th</p>
                        </div>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="card text-white bg-info">
                        <div class="card-body">
                            <h5 class="card-title">Days Remaining</h5>
                            <p class="card-text display-4">30</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Recent Activities</h5>
                        </div>
                        <div class="card-body">
                            <ul class="list-group list-group-flush">
                                <li class="list-group-item">
                                    <i class="fas fa-check-circle text-success me-2"></i> Payment received
                                </li>
                                <li class="list-group-item">
                                    <i class="fas fa-tools text-primary me-2"></i> Room maintenance request submitted
                                </li>
                                <li class="list-group-item">
                                    <i class="fas fa-user-plus text-info me-2"></i> New roommate assigned
                                </li>
                                <li class="list-group-item">
                                    <i class="fas fa-clipboard-list text-warning me-2"></i> Hostel rules updated
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5 class="mb-0">Quick Actions</h5>
                        </div>
                        <div class="card-body">
                            <div class="d-grid gap-3">
                                <button class="btn btn-primary">
                                    <i class="fas fa-money-bill-wave me-2"></i>Make Payment
                                </button>
                                <button class="btn btn-success">
                                    <i class="fas fa-tools me-2"></i>Request Maintenance
                                </button>
                                <button class="btn btn-info">
                                    <i class="fas fa-info-circle me-2"></i>View Room Details
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-font-awesome-kit.js"></script>
} 